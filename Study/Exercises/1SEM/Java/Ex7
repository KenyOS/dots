import java.util.Scanner;
public class Ex7 
{
	
	public static void main(String[] args) 
	{
		int x;
		
		Scanner reader;
		
		reader = new Scanner(System.in);
		
		System.out.println("Write a number ");
		x = reader.nextInt();
		
		while (x<=0)
		{
			x = reader.nextInt();
			System.out.print("The number need to be greater than zero:");
		}

		reader.close();

	}

}
